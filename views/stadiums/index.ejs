<% include ../partials/header %>


<div class="ui main text container">
	<div class="ui huge header">Stadia</div>
	<div class="ui top attached segment">
		<div class="ui divided items">
			<% for(var i = 0; i < stadiums.length; i++){ %>
			<div class="item">
				<div class="image">
					<img src="<%= stadiums[i].image %>">
				</div>
				<div class="content">
					<a class="header" href="/stadiums/<%= stadiums[i]._id %>"><%= stadiums[i].name %></a>
						<div class="meta">
							<span><%= stadiums[i].createdAt.toDateString() %></span>
						</div>
						<div class="description">
							<p><%- stadiums[i].description.substring(0, 100) %></p>
					</div>
				
				<div class="extra">
					<a class="ui floated basic violet button" href="/stadiums/<%= stadiums[i]._id %>">Read More 
					<i class="right chevron icon"></i>
					</a>
				</div>
					</div>
			</div>
			<% } %>
		
		</div>
	</div>

</div>

<% include ../partials/footer %>