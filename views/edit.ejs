<% include partials/header %>

<div id="eS" class="ui container">
<a class="ui blue button" href="/stadiums/<%= stadium.id %>">Go Back</a>
<div class="ui form">
	<h1>Edit <%= stadium.name %></h1>
	<form action="/stadiums/<%= stadium._id %>?_method=PUT" method="POST">
		<div class="field">
			<label>Name</label>
			<input type="text" name="stadium[name]" value="<%= stadium.name %>" required>
		</div>
		<div class="field">
			<label>Image</label>
		<input type="text" name="stadium[image]" value="<%= stadium.image %>" required>
		</div>
		<div class="field">
			<label>Description</label>
			<textarea name="stadium[description]" value="<%= stadium.description %>" required><%= stadium.description %></textarea>
		</div>
		<div class="field">
			<label for="location">Location</label>
			<input type="text" name="location" id="location" value="<%= stadium.location %>">
		</div>
		<input class="btn btn-success" type="submit">
	</form>
	

	</div>
</div>

<% include partials/footer %>